@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>
         and <b>edit</b> books.
        <br />You can <b>add</b> them <b>to</b> wishlist and rate them too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and their books in wishlist </b>in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Book" asp-action="All"
       class="btn btn-primary btn-lg">All Books</a>
    <a asp-area="" asp-controller="Book" asp-action="Add"
       class="btn btn-primary btn-lg">Add Book</a>
    <span> | </span>
    <a asp-area="" asp-controller="Book" asp-action="Mine"
       class="btn btn-primary btn-lg">My Books</a>
    <span> | </span>
    <a asp-area="" asp-controller="Author" asp-action="Add"
       class="btn btn-primary btn-lg">Add Author</a>
       <a asp-area="" asp-controller="Publisher" asp-action="Add"
       class="btn btn-primary btn-lg">Add Publisher</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>